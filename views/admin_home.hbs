<body class="background " style="overflow-x: hidden;">
  <div class="container">
<table class="table table-dark mt-4" id="myTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Username}}</td>
      <td>{{this.Email}}</td>
      <td><a href="/admin/adminEdit/{{this._id}}"><i class="fas fa-user"></i></a></td>
      <td><a href="/admin/deleteUser/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.Username}}?');"><i  class="fas fa-trash"></i></a></td>

      

    </tr>
      {{/each}}
  </tbody>
</table>
  </div>
</body>

